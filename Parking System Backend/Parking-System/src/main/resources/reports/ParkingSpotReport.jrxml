<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ParkingSpotReport" pageWidth="595" pageHeight="842" columnWidth="515" leftMargin="40" rightMargin="40" topMargin="40" bottomMargin="40">

    <!-- Query to fetch data from the database -->
    <queryString>
        <![CDATA[
        SELECT 
            SUM(p.Amount) AS TotalRevenue,
            (COUNT(DISTINCT r.ReservationID) / COUNT(DISTINCT s.SpotID)) * 100 AS OccupancyRate,
            COUNT(DISTINCT CASE WHEN p.PaymentStatus != 'Completed' THEN r.ReservationID END) AS UnpaidReservations
        FROM 
            payment p
        JOIN 
            reservation r ON p.ReservationID = r.ReservationID
        JOIN 
            parkingspot s ON r.SpotID = s.SpotID
        WHERE 
            p.PaymentStatus = 'Completed' OR p.PaymentStatus != 'Completed'
        ]]>
    </queryString>

    <!-- Fields in the report -->
    <field name="TotalRevenue" class="java.lang.Integer"/>
    <field name="OccupancyRate" class="java.lang.Integer"/>
    <field name="UnpaidReservations" class="java.lang.Integer"/>

    <title>
        <band height="60">
            <textField>
                <reportElement x="0" y="0" width="515" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Parking Spot Report"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column Headers -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="150" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Total Revenue]]></text>
            </staticText>
            <staticText>
                <reportElement x="150" y="0" width="150" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Occupancy Rate]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Unpaid Reservations]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{TotalRevenue}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{OccupancyRate}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{UnpaidReservations}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="515" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Generated by Parking System"]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
